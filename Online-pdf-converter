    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.querySelector('.nav-links');
        
        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('show');
        });
        
        // Tab switching functionality
        document.querySelectorAll('.tab-btn').forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all buttons
                document.querySelectorAll('.tab-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                
                // Add active class to clicked button
                button.classList.add('active');
                
                // Update convert button text
                const convertBtn = document.getElementById('convertBtn');
                if (button.textContent === 'Edit PDF') {
                    convertBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Edit PDF Document';
                } else if (button.textContent === 'Merge PDF') {
                    convertBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Merge PDF Files';
                } else if (button.textContent === 'Unlock PDF') {
                    convertBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Unlock PDF File';
                } else {
                    convertBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Convert to Word Document';
                }
            });
        });
        
        // File upload interaction
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('file-upload');
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('active');
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('active');
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('active');
            
            if (e.dataTransfer.files.length) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelection();
            }
        });
        
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });
        
        fileInput.addEventListener('change', handleFileSelection);
        
        function handleFileSelection() {
            if (fileInput.files.length > 0) {
                const fileName = fileInput.files[0].name;
                uploadArea.innerHTML = `
                    <i class="fas fa-file-pdf"></i>
                    <h3>${fileName}</h3>
                    <p>Ready to process</p>
                    <button class="file-label" id="changeFileBtn">
                        <i class="fas fa-sync"></i> Change File
                    </button>
                `;
                
                // Reattach event listener to new button
                document.getElementById('changeFileBtn').addEventListener('click', (e) => {
                    e.stopPropagation();
                    fileInput.click();
                });
            }
        }
        
        // Convert button functionality
        const convertBtn = document.getElementById('convertBtn');
        
        convertBtn.addEventListener('click', () => {
            if (!fileInput.files.length) {
                alert('Please select a file first!');
                return;
            }
            
            // Simulate processing
            convertBtn.innerHTML = '<span class="spinner"></span> Processing...';
            convertBtn.disabled = true;
            
            setTimeout(() => {
                convertBtn.innerHTML = '<i class="fas fa-download"></i> Download Converted File';
                convertBtn.disabled = false;
                convertBtn.style.background = 'var(--success)';
                
                // Add download functionality
                const downloadHandler = () => {
                    alert('File downloaded successfully!');
                    // Reset UI
                    convertBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Convert to Word Document';
                    convertBtn.style.background = 'var(--primary)';
                    convertBtn.removeEventListener('click', downloadHandler);
                    fileInput.value = '';
                    uploadArea.innerHTML = `
                        <i class="fas fa-cloud-upload-alt"></i>
                        <h3>Drag & Drop your files here</h3>
                        <p>or click to browse files on your computer</p>
                        <label for="file-upload" class="file-label">
                            <i class="fas fa-folder-open"></i> Choose File
                        </label>
                    `;
                };
                
                convertBtn.addEventListener('click', downloadHandler);
            }, 2500);
        });
    </script>
</body>
</html>
